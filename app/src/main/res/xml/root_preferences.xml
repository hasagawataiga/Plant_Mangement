<!-- settings_fragment.xml -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Profile Section -->
    <PreferenceCategory
        android:title="Profile">

        <Preference
            android:key="profile_info"
            android:title="Profile Info"
            android:summary="View your user information" />

    </PreferenceCategory>

    <!-- Notification Section -->
    <PreferenceCategory
        android:title="Notification">

        <Preference
            android:key="notification_settings"
            android:title="Notification Settings"
            android:summary="Select the days of the week to receive notifications" />

    </PreferenceCategory>

    <!-- About Us Section -->
    <PreferenceCategory
        android:title="About Us">

        <Preference
            android:key="about_us"
            android:title="About Us"
            android:summary="Learn more about the development team" />

    </PreferenceCategory>

    <!-- Version Section -->
    <PreferenceCategory
        android:title="Version">

        <Preference
            android:key="app_version"
            android:title="App Version"
            android:summary="1.0.0" />

    </PreferenceCategory>

</PreferenceScreen>